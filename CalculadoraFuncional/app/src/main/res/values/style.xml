<resources>
    <!-- Estilo para los botones de las dos primeras filas -->
    <style name="MyMaterialButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">#FF6200EE</item> <!-- Color de fondo -->
        <item name="android:layout_margin">8dp</item> <!-- Margen opcional -->
        <item name="cornerRadius">0dp</item> <!-- Bordes cuadrados -->
        <item name="android:drawableStart">@drawable/ic_launcher_foreground</item> <!-- Imagen delante del texto -->
        <item name="android:textSize">16sp</item> <!-- Tamaño de letra -->
        <item name="android:textColor">#FFFFFF</item> <!-- Color de letra -->
        <item name="android:padding">8dp</item> <!-- Espaciado del contenido -->
    </style>

    <!-- Estilo para los botones de las dos siguientes filas -->
    <style name="MyMaterialButtonStyleBis" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">#FF3700B3</item> <!-- Color de fondo -->
        <item name="cornerRadius">16dp</item> <!-- Bordes redondeados -->
        <item name="android:textSize">16sp</item> <!-- Tamaño de letra -->
        <item name="android:textColor">#FFFFFF</item> <!-- Color de letra -->
        <item name="android:padding">8dp</item> <!-- Espaciado del contenido -->
    </style>

    <!-- Estilo para el visor -->
    <style name="MiVisorStyle">
        <item name="android:typeface">monospace</item> <!-- Usar tipo de letra monospace para fallback -->
        <item name="android:fontFamily">@fonts/colour</item> <!-- Archivo colour.ttf en res/font -->
        <item name="android:textColor">#0000FF</item> <!-- Color azul para el visor -->
        <item name="android:textSize">20sp</item> <!-- Tamaño de letra para el visor -->
    </style>
</resources>
